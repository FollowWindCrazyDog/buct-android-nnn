<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data></data>


    <cn.edu.buct.areatour.features.audioplay.ui.MaxHeightView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:mhv_HeightDimen="@dimen/dialog_music_station_height">


        <LinearLayout
            android:id="@+id/relayout_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"

            android:background="@android:color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView

                    android:id="@+id/tv_play_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/theme_margin_left"
                    android:text="随机播放(0)"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView

                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="top|right"
                    android:padding="@dimen/theme_margin_left"
                    android:text="关闭"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="top|center_horizontal"
                    android:padding="@dimen/theme_margin_left"
                    android:text="播放列表"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">


                <android.support.v7.widget.RecyclerView

                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </android.support.v7.widget.RecyclerView>
            </LinearLayout>


        </LinearLayout>

    </cn.edu.buct.areatour.features.audioplay.ui.MaxHeightView>
</layout>