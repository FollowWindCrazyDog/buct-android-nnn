<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--第一栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_white">
        <!--我的收藏-->
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/user_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_star_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="我的收藏"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
        <View
            android:layout_height="0.5px"
            android:layout_width="match_parent"
            android:background="@color/grey_300"
            android:layout_marginLeft="48dp"/>
        <!--我的关注-->
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/user_watch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_remove_red_eye_black_24dp"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="我的关注"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>

    <!--第二栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_white">
        <!--主播中心-->
        <RelativeLayout
            android:id="@+id/anchor_center"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_keyboard_voice_black_24dp"
                android:drawableTint="#26a69a"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="主播中心"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
        <View
            android:layout_height="0.5px"
            android:layout_width="match_parent"
            android:background="@color/grey_300"
            android:layout_marginLeft="48dp"/>
        <!--已购内容-->
        <RelativeLayout
            android:id="@+id/shop_content"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_shopping_cart_black_24dp"
                android:drawableTint="#ec407a"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="已购内容"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>



    <!--第三栏-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="2dp"
        android:background="@color/color_white">
        <!--最近浏览-->
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/user_recent_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_recent_view"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="最近浏览"
                android:textColor="@android:color/black"/>
        </RelativeLayout>
        <View
            android:layout_height="0.5px"
            android:layout_width="match_parent"
            android:background="@color/grey_300"
            android:layout_marginLeft="48dp"/>
        <!--夜间模式-->
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/user_moon_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_moon"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="夜间模式"
                android:textColor="@android:color/black"
                android:id="@+id/textView2" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/switchCompat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:theme="@style/Theme.AppCompat.Light"
                android:textOff="Off"
                android:textOn="On" />

        </RelativeLayout>
        <View
            android:layout_height="0.5px"
            android:layout_width="match_parent"
            android:background="@color/grey_300"
            android:layout_marginLeft="48dp"/>
        <!--设置-->
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/user_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/ripple_bg_white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_settings"
                android:drawablePadding="12dp"
                android:gravity="center_vertical"
                android:padding="12dp"
                android:text="设置"
                android:textColor="@android:color/black"/>

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>